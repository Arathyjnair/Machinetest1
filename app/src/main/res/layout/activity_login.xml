<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relay2"
    tools:context=".Login">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/laylog"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="40dp"
        android:fontFamily="monospace"
        android:textColor="#d11eb0"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layeml"
        android:layout_below="@+id/laylog">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/eml"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/laypaswd"
        android:layout_below="@+id/layeml">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:id="@+id/pswd"
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutok"
        android:layout_below="@+id/laypaswd"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="OK"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="120dp"
        android:onClick="logclick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutok">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NEW USER"
            android:textSize="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:onClick="usrclick"/>
    </LinearLayout>
</RelativeLayout>