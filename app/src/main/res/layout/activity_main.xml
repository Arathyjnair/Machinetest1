<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ly1"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/redlay">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RED"
        android:textColor="#f50d0d"
        android:textSize="30dp"
        android:id="@+id/red"
        android:layout_marginTop="60dp"
        android:onClick="redclick"/>
</LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/bluelay"
       android:layout_below="@+id/redlay"
       android:layout_marginTop="50dp">
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="BLUE"
           android:textColor="#f50d0d"
           android:textSize="30dp"
           android:id="@+id/blue"
           android:layout_marginTop="5dp"
           android:onClick="blueclick"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/laygrn"
        android:layout_below="@+id/bluelay">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GREEN"
            android:textColor="#f50d0d"
            android:textSize="30dp"
            android:id="@+id/green"
            android:layout_marginTop="50dp"
            android:onClick="grnclick"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layokk"
        android:layout_below="@+id/laygrn">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="#f50d0d"
            android:textSize="30dp"
            android:id="@+id/okk"
            android:layout_marginTop="50dp"
            android:onClick="okclick"
            />
            />
    </LinearLayout>

</RelativeLayout>